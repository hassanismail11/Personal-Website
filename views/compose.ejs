<%- include('partials/header'); -%>

<h1 class="form-label"> Compose </h1>

<form action="/compose" method="post">

    <div class="form-group">
        <label>Title</label>

        <input type="text" class="formy form-control" id="postTitle"
            name="postTitle" placeholder="Enter Post Title">
    </div>

    <div class="form-group">
        <label>Post</label>

        <textarea class="formy form-control" id="postText"
            name="postText" rows="5" placeholder="Enter Post Text"></textarea>
    </div>

    <button class="formy btn btn-secondary btn-lg btn-outline-primary"
        type="submit" name="PostButton">Post</button>

</form>

<%- include('partials/footer'); -%>