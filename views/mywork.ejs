<%- include('partials/header'); -%>

<body id="blog-body">

    <main class="s-home s-home--particles">

        <div id="particles-js" class="home-particles"></div>

        <div class="gradient-overlay"></div>

        <div id="blog-logo" class="home-logo">
            <a href="/">
                <img src="images/logo.svg" alt="Homepage">
            </a>
        </div>

        <div class="home-content work-content__main">

            <div id="workContainer" class="container">
                <div class="row">

                    <% works.forEach(function(work){%>

                    <div id="workCard" class="card col-md-12 p-3">
                        <div class="row ">
                            <div class="col-md-4">
                                <img class="w-100"
                                    src="<%= work.workImageURL %>">
                                <span class="post-date"><%= work.workDate %></span>
                            </div>
                            <div class="col-md-8">
                                <div class="card-block">
                                    <h3 class="card-title"><%= work.workTitle %></h3>
                                    <p class="card-text text-justify"><%= work.workContent %></p>
                                    <a href="/myworks/<%= work.workURL %>"
                                        class="btn btn-primary">read more...</a>
                                </div>
                            </div>
                        </div>
                    </div>

                    <%});%>

                </div>
            </div>
        </div>

        <ul id="socials-sticky" class="home-social">
            <li>
                <a href="https://www.facebook.com/hassanismail11"
                    target="_blank" rel="noopener noreferrer"><i
                        class="fab fa-facebook-f" aria-hidden="true"></i><span>Facebook</span></a>
            </li>
            <li>
                <a href="https://twitter.com/hassanismail111" target="_blank"
                    rel="noopener noreferrer"><i class="fab fa-twitter"
                        aria-hidden="true"></i><span>Twiiter</span></a>
            </li>
            <li>
                <a href="https://www.instagram.com/hassanismail11/"
                    target="_blank" rel="noopener noreferrer"><i
                        class="fab fa-instagram" aria-hidden="true"></i><span>Instagram</span></a>
            </li>
            <li>
                <a href="https://github.com/hassanismail11" target="_blank"
                    rel="noopener noreferrer"><i class="fab fa-github"
                        aria-hidden="true"></i><span>Github</span></a>
            </li>
            <li>
                <a href="https://www.linkedin.com/in/hassanismail11/"
                    target="_blank" rel="noopener noreferrer"><i
                        class="fab fa-linkedin" aria-hidden="true"></i><span>LinkedIn</span></a>
            </li>
        </ul>

    </main>

    <!-- Java Script
    ================================================== -->
    <script src="js/jquery-3.2.1.min.js"></script>
    <script src="js/plugins.js"></script>
    <script src="js/polygons.js"></script>
    <script src="js/main.js"></script>

</body>
